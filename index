    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>







    <script type="text/javascript">


            ative = {};
            ative.page = {};


            $(document).ready(function ($) {

                $("#submitButton").on("click", ative.page.showShippingMethod);

                $("#backShippingForm").on("click", ative.page.backCustomerInfo);

                $("#showPaymentForm").on("click", ative.page.showPaymentMethod);

                $("#backShippingMethod").on("click", ative.page.backPaymentMethod);

                $("#completeButton").on("click", ative.page.completeOrder);

                $("#checkOutButton").on("click", ative.page.checkingOut);

                $("#productsButton").on("click", ative.page.showProducts);






            });


            ative.page.showShippingMethod = function () {

                event.preventDefault();


                var firstName = $("#firstName").val();
                var lastName = $("#lastName").val();
                var address = $("#address").val();
                var apt = $("#apt").val();
                var city = $("#city").val();
                var zipCode = $("#zipCode").val();

                if (firstName === "" || lastName === "" || address === "" || apt === "" || city === "" || zipCode === "") {
                    alert("Missing information");
                } else {
                    event.preventDefault();
                    $("#shippingAddress").hide();

                    $("#shippingMethod").show();
                }
            }


            ative.page.backCustomerInfo = function () {
                event.preventDefault();

                $("#shippingAddress").show();

                $("#shippingMethod").hide();

            }


            ative.page.backPaymentMethod = function () {
                event.preventDefault();

                $("#paymentMethod").show();

                $("#shippingMethod").hide();



            }

            ative.page.backPaymentMethod = function () {

                event.preventDefault();

                $("#paymentMethod").hide();

                $("#shippingMethod").show();
            }

            ative.page.completeOrder = function () {
                event.preventDefault();


                var ccNumber = $("#ccNumber").val();
                var ccNAme = $("#ccName").val();
                var month = $("#ccMonth").val();
                var code = $("#ccCode").val();




                if (ccNumber === "" || ccNAme === "" || month === "" || code === "") {
                    alert("Missing information");
                } else {
                    event.preventDefault();
                    $("#thankYou").show();

                    $("#paymentMethod").hide();

                }






            }

            ative.page.showPaymentMethod = function () {
                event.preventDefault();
                $("#shippingMethod").hide();
                $("#paymentMethod").show();
            }

            ative.page.checkingOut = function () {
                event.preventDefault();
                $("#shippingAddress").show();
                $("#paymentMethod").hide();
                $("#shippingMethod").hide();
                $("#thankYou").hide();
                $("#productsPage").hide();

            }










    </script>

</body>
